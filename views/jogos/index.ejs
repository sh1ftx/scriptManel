<!DOCTYPE html>
<html lang="pt-BR">
<head>
<meta charset="UTF-8" />
<title>Jogos • Sistema</title>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
* {
    font-family: "Inter", system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
}

body {
    min-height: 100vh;
    padding: 3rem 2rem;
    background: linear-gradient(135deg, #fff1c1, #ffd6a5, #ffeadb);
    background-size: 300% 300%;
    animation: gradientMove 12s ease infinite;
}

@keyframes gradientMove {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
}

.page-container {
    max-width: 1100px;
    margin: auto;
}

.page-title {
    font-weight: 800;
    font-size: 2.4rem;
    margin-bottom: 1.4rem;
    background: linear-gradient(90deg, #f6c453, #f28b6b);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

/* TOPO */
.top-actions {
    display: flex;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
}

.btn-soft {
    padding: 0.55rem 1.1rem;
    border-radius: 14px;
    border: 1px solid rgba(0,0,0,0.08);
    font-size: 0.85rem;
    font-weight: 500;
    color: #555;
    text-decoration: none;
    background: rgba(255,255,255,0.8);
    transition: all 0.25s ease;
}

.btn-soft:hover {
    background: rgba(255,255,255,1);
    transform: translateY(-1px);
}

/* BOTÃO PRINCIPAL — BLINDADO */
.btn-primary-soft {
    color: #fff !important;
    font-weight: 600;
    border: none !important;

    background: linear-gradient(135deg, #f6d365, #fda085);
    background-size: 200% 200%;
    background-position: left center;

    transition:
        background-position 0.4s ease,
        box-shadow 0.3s ease,
        transform 0.2s ease;
}

.btn-primary-soft:hover,
.btn-primary-soft:focus,
.btn-primary-soft:active {
    color: #fff !important;
    background: linear-gradient(135deg, #f6d365, #fda085);
    background-position: right center;

    box-shadow: 0 12px 28px rgba(246,211,101,0.45);
    transform: translateY(-1px);
}

/* CARD */
.glass-card {
    margin-top: 1rem;
    padding: 2rem;
    border-radius: 26px;
    background: rgba(255,255,255,0.65);
    backdrop-filter: blur(16px);
    box-shadow: 0 20px 45px rgba(0,0,0,0.12);
}

/* TABELA */
.table {
    border-collapse: separate;
    border-spacing: 0 10px;
}

.table thead th {
    border: none;
    font-size: 0.75rem;
    text-transform: uppercase;
    color: #777;
}

.table tbody tr {
    background: rgba(255,255,255,0.95);
    border-radius: 14px;
    box-shadow: 0 6px 16px rgba(0,0,0,0.06);
}

.table tbody td {
    border: none;
    padding: 0.8rem;
}

/* AÇÕES DA TABELA */
.action-buttons {
    display: flex;
    gap: 0.4rem;
}

.btn-edit {
    background: linear-gradient(135deg, #ffe29f, #ffa99f);
    border-radius: 12px;
    padding: 0.35rem 0.7rem;
    font-size: 0.75rem;
    border: none;
}

.btn-delete {
    background: linear-gradient(135deg, #ff9a9e, #fad0c4);
    border-radius: 12px;
    padding: 0.35rem 0.7rem;
    font-size: 0.75rem;
    border: none;
    color: #fff;
}

/* ÁREA INFERIOR */
.bottom-actions {
    margin-top: 2.2rem;
    display: flex;
    justify-content: center;
}

/* BOTÃO DE DESTAQUE (LARANJA) */
.btn-highlight {
    padding: 0.85rem 2.1rem;
    border-radius: 20px;
    font-size: 0.95rem;
    font-weight: 600;
    text-decoration: none;
    color: #fff;
    border: none;

    background: linear-gradient(
        135deg,
        #ffb347,
        #ff8c42,
        #ff6f3c
    );
    background-size: 200% 200%;

    box-shadow:
        0 14px 36px rgba(255,140,66,0.5),
        inset 0 1px 0 rgba(255,255,255,0.35);

    transition:
        background-position 0.4s ease,
        transform 0.3s ease,
        box-shadow 0.3s ease;
}

.btn-highlight:hover {
    background-position: right center;
    transform: translateY(-2px);
    box-shadow:
        0 20px 48px rgba(255,140,66,0.65),
        inset 0 1px 0 rgba(255,255,255,0.45);
}
</style>
</head>

<body>
<div class="page-container">

<h1 class="page-title">Jogos Eletrônicos</h1>

<div class="top-actions">
    <a href="/jogos/novo" class="btn-soft btn-primary-soft">+ Novo Jogo</a>
    <a href="/amigos" class="btn-soft">Amigos</a>
    <a href="/emprestimos" class="btn-soft">Empréstimos</a>
</div>

<div class="glass-card">

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Título</th>
            <th>Plataforma</th>
            <th>Dono</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        <% jogos.forEach(j => { %>
        <tr>
            <td><%= j.id %></td>
            <td><%= j.titulo %></td>
            <td><%= j.plataforma %></td>
            <td><%= j.dono ? j.dono.nome : 'Sem dono' %></td>
            <td>
                <div class="action-buttons">
                    <a href="/jogos/editar/<%= j.id %>" class="btn-edit">Editar</a>
                    <form action="/jogos/excluir/<%= j.id %>" method="POST">
                        <button class="btn-delete">Excluir</button>
                    </form>
                </div>
            </td>
        </tr>
        <% }) %>
    </tbody>
</table>

<div class="bottom-actions">
    <a href="/api-consumo" class="btn-highlight">
        Ver Mais Detalhes
    </a>
</div>

</div>
</div>
</body>
</html>
