<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Editar Jogo • Sistema</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        * {
            font-family: "Inter", system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
        }

        body {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;

            /* FUNDO LARANJA PASTEL */
            background: linear-gradient(
                135deg,
                #fff1c1,
                #ffd6a5,
                #ffeadb
            );
            background-size: 300% 300%;
            animation: gradientMove 12s ease infinite;
        }

        @keyframes gradientMove {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        .form-card {
            width: 100%;
            max-width: 620px;
            padding: 2.5rem;

            border-radius: 24px;
            background: rgba(255, 255, 255, 0.65);
            backdrop-filter: blur(14px);
            -webkit-backdrop-filter: blur(14px);

            box-shadow:
                0 20px 45px rgba(0, 0, 0, 0.12),
                inset 0 0 0 1px rgba(255, 255, 255, 0.3);
        }

        .form-title {
            font-weight: 700;
            letter-spacing: 0.5px;
            background: linear-gradient(
                90deg,
                #f6c453,
                #f28b6b
            );
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .form-subtitle {
            font-size: 0.95rem;
            color: #6c757d;
        }

        label {
            font-size: 0.85rem;
            font-weight: 500;
            color: #555;
        }

        .form-control,
        .form-select {
            border-radius: 14px;
            padding: 0.75rem 1rem;
            border: 1px solid #e3e3e3;
            background-color: rgba(255, 255, 255, 0.85);
            transition: all 0.25s ease;
        }

        .form-control:focus,
        .form-select:focus {
            border-color: #f6c453;
            box-shadow: 0 0 0 0.2rem rgba(246, 196, 83, 0.35);
        }

        .btn-save {
            border: none;
            border-radius: 16px;
            padding: 0.75rem;

            font-weight: 600;
            letter-spacing: 0.4px;
            color: #fff;

            background: linear-gradient(
                135deg,
                #f6c453,
                #f28b6b
            );
            background-size: 200% 200%;
            transition: all 0.3s ease;
        }

        .btn-save:hover {
            transform: translateY(-2px);
            background-position: right center;
            box-shadow: 0 10px 25px rgba(246, 196, 83, 0.35);
        }

        .btn-cancel {
            border-radius: 16px;
            padding: 0.75rem;
            font-weight: 500;

            background: rgba(255, 255, 255, 0.7);
            border: 1px solid #ddd;
            color: #555;
            transition: all 0.25s ease;
        }

        .btn-cancel:hover {
            background: rgba(255, 255, 255, 0.9);
            transform: translateY(-1px);
        }
    </style>
</head>

<body>

    <div class="form-card">
        <div class="text-center mb-4">
            <h3 class="form-title">Editar Jogo</h3>
            <p class="form-subtitle">Atualize as informações do jogo</p>
        </div>

        <form action="/jogos/editar/<%= jogo.id %>" method="POST">
            <div class="mb-3">
                <label class="form-label">Título</label>
                <input type="text" name="titulo" class="form-control" value="<%= jogo.titulo %>" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Plataforma</label>
                <input type="text" name="plataforma" class="form-control" value="<%= jogo.plataforma %>" required>
            </div>

            <div class="mb-4">
                <label class="form-label">Dono do Jogo</label>
                <select name="amigoId" class="form-select" required>
                    <% amigos.forEach(amigo => { %>
                        <option value="<%= amigo.id %>" <%= jogo.amigoId === amigo.id ? 'selected' : '' %>>
                            <%= amigo.nome %>
                        </option>
                    <% }) %>
                </select>
            </div>

            <div class="d-grid gap-3">
                <button type="submit" class="btn btn-save">
                    Salvar Alterações
                </button>
                <a href="/jogos" class="btn btn-cancel">
                    Cancelar
                </a>
            </div>
        </form>
    </div>

</body>
</html>
