<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8" />
    <title>Amigos â€¢ Sistema</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        * {
            font-family: "Inter", system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
        }

        body {
            min-height: 100vh;
            padding: 3rem 2rem;
            background: linear-gradient(135deg, #f3e8ff, #e9d5ff, #f5f3ff);
            background-size: 300% 300%;
            animation: gradientMove 14s ease infinite;
        }

        @keyframes gradientMove {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        .page-container {
            max-width: 1100px;
            margin: auto;
        }

        .page-title {
            font-weight: 800;
            font-size: 2.4rem;
            margin-bottom: 1.4rem;
            background: linear-gradient(90deg, #a855f7, #d946ef);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .glass-card {
            margin-top: 2rem;
            padding: 2rem;
            border-radius: 24px;
            background: rgba(255, 255, 255, 0.65);
            backdrop-filter: blur(14px);
            box-shadow: 0 20px 45px rgba(0, 0, 0, 0.12);
        }

        .top-actions {
            display: flex;
            flex-wrap: wrap;
            gap: 0.75rem;
            margin-top: 1.5rem;
        }

        /* BOTÃ•ES TOPO */
        .btn-soft {
            padding: 0.55rem 1.1rem;
            border-radius: 14px;
            border: 1px solid #ddd;
            font-size: 0.85rem;
            font-weight: 500;
            color: #555;
            text-decoration: none;
            background: rgba(255, 255, 255, 0.75);
            transition: all 0.25s ease;
        }

        .btn-soft:hover {
            transform: translateY(-1px);
            box-shadow: 0 6px 18px rgba(0,0,0,0.08);
            color: #333;
            background: rgba(255, 255, 255, 0.85);
        }

        .btn-primary-soft {
            border: none;
            color: #fff;
            font-weight: 600;
            background: linear-gradient(135deg, #c084fc, #e879f9);
        }

        .btn-primary-soft:hover {
            background: linear-gradient(135deg, #a855f7, #d946ef);
            color: #fff;
        }

        /* TABELA */
        .table {
            margin-top: 1.5rem;
            border-collapse: separate;
            border-spacing: 0 10px;
        }

        .table thead th {
            font-size: 0.75rem;
            text-transform: uppercase;
            color: #6b7280;
            border: none;
        }

        .table tbody tr {
            background: rgba(255, 255, 255, 0.88);
            border-radius: 14px;
            box-shadow: 0 6px 16px rgba(0, 0, 0, 0.06);
        }

        .table tbody td {
            padding: 0.8rem;
            border: none;
            vertical-align: middle;
        }

        .action-buttons {
            display: flex;
            gap: 0.4rem;
        }

        .btn-edit {
            background: linear-gradient(135deg, #ddd6fe, #e9d5ff);
            color: #4c1d95;
            border: none;
            border-radius: 12px;
            padding: 0.35rem 0.7rem;
            font-size: 0.75rem;
        }

        .btn-delete {
            background: linear-gradient(135deg, #f472b6, #fb7185);
            color: #fff;
            border: none;
            border-radius: 12px;
            padding: 0.35rem 0.7rem;
            font-size: 0.75rem;
        }

        /* BOTÃƒO PDF DESTAQUE */
        .pdf-wrapper {
            display: flex;
            justify-content: center;
            margin-top: 2.5rem;
        }

        .btn-pdf-highlight {
            padding: 0.9rem 2.4rem;
            font-size: 0.95rem;
            font-weight: 700;
            border-radius: 18px;
            text-decoration: none;
            color: #fff;
            border: none;
            background: linear-gradient(135deg, #c084fc, #e879f9);
            box-shadow: 0 14px 38px rgba(168, 85, 247, 0.45);
            transition: all 0.3s ease;
        }

        .btn-pdf-highlight:hover {
            transform: translateY(-3px) scale(1.02);
            background: linear-gradient(135deg, #a855f7, #d946ef);
            box-shadow: 0 22px 55px rgba(168, 85, 247, 0.6);
            color: #fff;
        }
    </style>
</head>

<body>

<div class="page-container">

    <h1 class="page-title">Amigos</h1>

    <% if (erro) { %>
        <div class="alert alert-warning mt-3">
            <strong>AtenÃ§Ã£o:</strong> <%= erro %>
        </div>
    <% } %>

    <div class="top-actions">
        <a href="/amigos/novo" class="btn-soft btn-primary-soft">+ Novo Amigo</a>
        <a href="/jogos" class="btn-soft">Jogos</a>
        <a href="/emprestimos" class="btn-soft">EmprÃ©stimos</a>
    </div>

    <div class="glass-card">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>AÃ§Ãµes</th>
                </tr>
            </thead>
            <tbody>
                <% amigos.forEach(a => { %>
                <tr>
                    <td><%= a.id %></td>
                    <td><%= a.nome %></td>
                    <td><%= a.email %></td>
                    <td>
                        <div class="action-buttons">
                            <a href="/amigos/editar/<%= a.id %>" class="btn-edit">Editar</a>
                            <form action="/amigos/excluir/<%= a.id %>" method="POST">
                                <button type="submit" class="btn-delete">Excluir</button>
                            </form>
                        </div>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>

        <!-- BOTÃƒO PDF EM DESTAQUE -->
        <div class="pdf-wrapper">
            <a href="/pdf/relatorio" target="_blank" class="btn-pdf-highlight">
                ðŸ“„ Gerar RelatÃ³rio em PDF
            </a>
        </div>
    </div>

</div>

</body>
</html>
