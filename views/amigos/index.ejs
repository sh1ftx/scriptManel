<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8" />
    <title>Amigos • Sistema</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        * {
            font-family: "Inter", system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
        }

        body {
            min-height: 100vh;
            padding: 3rem 2rem;

            background: linear-gradient(
                135deg,
                #f3e8ff,
                #e9d5ff,
                #f5f3ff
            );
            background-size: 300% 300%;
            animation: gradientMove 14s ease infinite;
        }

        @keyframes gradientMove {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        .page-container {
            max-width: 1100px;
            margin: auto;
        }

        .page-title {
            font-weight: 800;
            font-size: 2.4rem;
            letter-spacing: 0.8px;
            margin-bottom: 1.4rem;

            background: linear-gradient(
                90deg,
                #a855f7,
                #d946ef
            );
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;

            text-shadow: 0 2px 6px rgba(0,0,0,0.08);
        }

        .glass-card {
            margin-top: 2rem;
            padding: 2rem;

            border-radius: 24px;
            background: rgba(255, 255, 255, 0.65);
            backdrop-filter: blur(14px);
            -webkit-backdrop-filter: blur(14px);

            box-shadow:
                0 20px 45px rgba(0, 0, 0, 0.12),
                inset 0 0 0 1px rgba(255, 255, 255, 0.3);
        }

        .top-actions {
            display: flex;
            flex-wrap: wrap;
            gap: 0.75rem;
            margin-top: 1.5rem;
        }

        .btn-soft {
            padding: 0.55rem 1.1rem;
            border-radius: 14px;
            border: 1px solid #ddd;
            font-size: 0.85rem;
            font-weight: 500;
            color: #555;
            text-decoration: none;
            background: rgba(255, 255, 255, 0.75);
            transition: all 0.25s ease;
        }

        .btn-soft:hover {
            background: rgba(255, 255, 255, 0.95);
            transform: translateY(-1px);
        }

        .btn-soft.btn-primary-soft {
            color: #fff;
        }

        .btn-soft.btn-primary-soft:hover {
            background: linear-gradient(
                135deg,
                #c084fc,
                #e879f9
            );
            color: #fff;
            transform: translateY(-1px);
            box-shadow: 0 8px 22px rgba(168, 85, 247, 0.45);
        }

        .btn-primary-soft {
            border: none;
            color: #fff;
            font-weight: 600;
            background: linear-gradient(
                135deg,
                #c084fc,
                #e879f9
            );
        }

        .table {
            margin-top: 1.5rem;
            border-collapse: separate;
            border-spacing: 0 10px;
        }

        .table thead th {
            border: none;
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.6px;
            color: #6b7280;
        }

        .table tbody tr {
            background: rgba(255, 255, 255, 0.88);
            border-radius: 14px;
            box-shadow: 0 6px 16px rgba(0, 0, 0, 0.06);
        }

        .table tbody td {
            border: none;
            padding: 0.8rem;
            vertical-align: middle;
        }

        .action-buttons {
            display: flex;
            gap: 0.4rem;
        }

        .btn-edit {
            background: linear-gradient(135deg, #ddd6fe, #e9d5ff);
            color: #4c1d95;
            border: none;
            border-radius: 12px;
            padding: 0.35rem 0.7rem;
            font-size: 0.75rem;
            font-weight: 500;
        }

        .btn-delete {
            background: linear-gradient(135deg, #f472b6, #fb7185);
            color: #fff;
            border: none;
            border-radius: 12px;
            padding: 0.35rem 0.7rem;
            font-size: 0.75rem;
        }
    </style>
</head>

<body>

<div class="page-container">

    <h1 class="page-title">Amigos</h1>

    <% if (erro) { %>
        <div class="alert alert-warning mt-3">
            <strong>Atenção:</strong> <%= erro %>
        </div>
    <% } %>

    <div class="top-actions">
        <a href="/amigos/novo" class="btn-soft btn-primary-soft">+ Novo Amigo</a>
        <a href="/jogos" class="btn-soft">Jogos</a>
        <a href="/emprestimos" class="btn-soft">Empréstimos</a>
        <a href="/api/amigos" class="btn-soft">Ver JSON</a>
        <!-- <a href="/pdf/amigos" target="_blank" class="btn-soft">PDF</a> -->
        <a href="/pdf/relatorio" target="_blank" class="btn-soft">PDF</a>

    </div>

    <div class="glass-card">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% amigos.forEach(a => { %>
                <tr>
                    <td><%= a.id %></td>
                    <td><%= a.nome %></td>
                    <td><%= a.email %></td>
                    <td>
                        <div class="action-buttons">
                            <a href="/amigos/editar/<%= a.id %>" class="btn-edit">Editar</a>
                            <form action="/amigos/excluir/<%= a.id %>" method="POST">
                                <button type="submit" class="btn-delete">Excluir</button>
                            </form>
                        </div>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

</div>

</body>
</html>
